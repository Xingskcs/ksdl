{%- set name = "lstm" -%}
{%- set image = "dockersksjtu/distributed-lstm:v8" -%}
{%- set worker_replicas = 1 -%}
{%- set ps_replicas = 1 -%}
{%- set script = "/distributed_lstm.py" -%}
{%- set data_dir = "/data_dir" -%}
{%- set train_dir = "/tmp/checkpoints" -%}
{%- set credential_secret_name = "" -%}
{%- set credential_secret_key = "" -%}

{%- set port = 6040 -%}
{%- set replicas = {"worker": worker_replicas, "ps": ps_replicas} -%}

{%- macro worker_hosts() -%}
  {%- for i in range(worker_replicas) -%}
    {%- if not loop.first -%},{%- endif -%}
    {{ name }}-worker-{{ i }}:{{ port }}
  {%- endfor -%}
{%- endmacro -%}

{%- macro ps_hosts() -%}
  {%- for i in range(ps_replicas) -%}
    {%- if not loop.first -%},{%- endif -%}
    {{ name }}-ps-{{ i }}:{{ port }}
  {%- endfor -%}
{%- endmacro -%}

{%- for job in ["worker", "ps"] -%}
{%- for i in range(replicas[job]) -%}
kind: Service
apiVersion: v1
metadata:
  name: {{ name }}-{{ job }}-{{ i }}
spec:
  selector:
    name: {{ name }}
    job: {{ job }}
    task: "{{ i }}"
  ports:
  - port: {{ port }}
    targetPort: {{ port }}

---
kind: Pod
apiVersion: v1
metadata:
  name: {{ name }}-{{ job }}-{{ i }}
  labels:
        name: {{ name }}
        job: {{ job }}
        task: "{{ i }}"
spec:
  restartPolicy: OnFailure
  containers:
  - name: tensorflow
    image: {{ image }}
    imagePullPolicy: IfNotPresent
    ports:
    - containerPort: {{ port }}
    resources:
      requests:
        memory: "1024Mi"
        cpu: "2000m"
      limits:
        memory: "1024Mi"
        cpu: "2000m"
    command:
    - "/usr/bin/python"
    - "{{ script }}"
    args:
    - "--data_dir={{ data_dir }}"
    - "--train_dir={{ train_dir }}"
    - "--task_index={{ i }}"
    - "--job_name={{ job }}"
    - "--worker_hosts={{ worker_hosts() }}"
    - "--ps_hosts={{ ps_hosts() }}"
---
{% endfor %}
{%- endfor -%}

